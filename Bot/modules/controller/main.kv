                app.root.transition = NoTransition(duration=0)

<Module1Screen>:
    name: 'module1'
    BoxLayout:
        Button:
            text: 'Start'
            on_release:
                app.sendMessage(str([1,2,3]))
        Button:
            text: 'Back'
            on_release:
                app.root.current = 'menu'
                app.root.transition = NoTransition(duration=0)
                app.sendMessage("bakmesg")

